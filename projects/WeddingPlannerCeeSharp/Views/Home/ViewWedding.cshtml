@model Wedding
@using WeddingPlannerCeeSharp.Models

<div class="text-success bg-dark container  fs-5">
    <h1 class ="text-center">@ViewBag.OneWedding.Wedder1 and @ViewBag.OneWedding.Wedder2</h1>
    <h2 class= "text-center text-warning">Wedding Date</h2>
    <div class = "d-flex justify-content-around row text-info">
        <div class = "col align-self-start m-2">                
            <h3>Guests:</h3>
        </div>
        <div>
            @foreach(RSVP i in ViewBag.OneWedding.UsersWhoRSVPed){
                <p>@i.UserWhoRSVPed.UserName</p>
            }
            @* foreach loop that pulls in all of those who have RSVPed *@
        </div>
    </div>
</div>
<div class = "d-flex justify-content-between">
    <a href="/Dashboard" class ="btn btn-primary btn-outline-info btn-lg fs-3">Dashboard</a>
    <a href="/LogoutUser" class ="btn btn-success btn-outline-info btn-lg fs-3">Logout</a>
</div>